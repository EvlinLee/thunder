    <com.xunlei.downloadprovider.homepage.recommend.feed.FeedVideoItemBottomView android:id="@+id/layout_bottom_bar" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x3001" android:layout_below="@+id/layout_hot_comment" />
