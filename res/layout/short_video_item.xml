        <ImageView android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/play_icon" android:layout_width="UNKNOWN_DATA_0x2e01" android:layout_height="UNKNOWN_DATA_0x2e01" android:src="@drawable/ic_play_normal_index" />
        <com.xunlei.downloadprovider.homepage.recommend.feed.FeedItemShareLayout android:id="@+id/layout_share" android:visibility="gone" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0xc801" />
