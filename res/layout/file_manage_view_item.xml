    <RelativeLayout android:id="@+id/path_choice_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:layout_marginRight="7dp" android:layout_toRightOf="@+id/bt_item_local_file_icon" android:layout_centerVertical="true">
